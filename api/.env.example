# Strapi server configuration
HOST=0.0.0.0
PORT=1337

# Security keys and secrets - generate strong random strings for production!
# You can use: node -e "console.log(require('crypto').randomBytes(16).toString('base64'))" to generate values

# Used for cookie encryption (comma-separated values)
APP_KEYS=exampleKey1,exampleKey2,exampleKey3,exampleKey4

# Used for API token generation
API_TOKEN_SALT=exampleApiTokenSaltString

# Used for admin panel authentication
ADMIN_JWT_SECRET=exampleAdminJwtSecretString

# Used for data transfer operations
TRANSFER_TOKEN_SALT=exampleTransferTokenSaltString

# Used for user authentication (critical for frontend integration)
JWT_SECRET=exampleJwtSecretString

# Database configuration (uncomment and configure if using a database other than SQLite)
# DATABASE_CLIENT=postgres
# DATABASE_HOST=127.0.0.1
# DATABASE_PORT=5432
# DATABASE_NAME=strapi
# DATABASE_USERNAME=strapi
# DATABASE_PASSWORD=strapi
# DATABASE_SSL=false 